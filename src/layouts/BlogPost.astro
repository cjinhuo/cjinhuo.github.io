---
import BaseHead from '../components/BaseHead.astro'
import Header from '@/components/Header/Header.astro'
import Footer from '../components/Footer.astro'
import 'github-markdown-css'
import { Image } from 'astro:assets'
import Comments from '../components/Comments.astro'
import Tag from '../components/Tag.astro'

const {
	content: { title, duration, description, pubDate, updatedDate, heroImage, author, authorHref, tags },
	rawContent,
} = Astro.props

const getWordCount = (content: string) => {
	if (!content) return 0
	const text = content
		.replace(/```[\s\S]*?```/g, '')
		.replace(/`[^`]*`/g, '')
		.replace(/!\[.*?\]\(.*?\)/g, '')
		.replace(/<img[^>]*>/gi, '')
		.replace(/<video[^>]*>[\s\S]*?<\/video>/gi, '')
		.replace(/<audio[^>]*>[\s\S]*?<\/audio>/gi, '')
		.replace(/<iframe[^>]*>[\s\S]*?<\/iframe>/gi, '')
		.replace(/<svg[^>]*>[\s\S]*?<\/svg>/gi, '')
		.replace(/<canvas[^>]*>[\s\S]*?<\/canvas>/gi, '')
		.replace(/<[^>]+>/g, '')
		.replace(/\[([^\]]*)\]\([^)]*\)/g, '$1')
		.replace(/[#*_~>`-]/g, '')
		.replace(/\n/g, ' ')
	const chineseChars = text.match(/[\u4e00-\u9fa5]/g) || []
	const englishWords = text
		.replace(/[\u4e00-\u9fa5]/g, ' ')
		.split(/\s+/)
		.filter((word) => word.length > 0)
	return chineseChars.length + englishWords.length
}

const wordCount = getWordCount(rawContent?.() || '')
---

<html lang='en'>
  <head>
    <BaseHead
      title={title}
      description={description}
      image={heroImage}
      author={author}
      authorHref={authorHref}
      pubDate={pubDate}
      updatedDate={updatedDate}
      type='article'
      tags={tags}
    />
    <style>
      .title {
        font-size: 2em;
        margin: 0.25em 0 0;
      }
      hr {
        border-top: 1px solid #ddd;
        margin: 1rem 0;
      }
      article img {
        content-visibility: auto;
      }
    </style>
  </head>

  <body class='bg-skin-background'>
    <Header />
    <main>
      <article
        class='prose prose-slate prose-h1:my-5 prose-h2:my-4 prose-h3:my-3 prose-h4:my-2 prose-h5:my-1 prose-img:rounded-md dark:prose-invert max-w-content m-auto my-6'>
        {
          heroImage && (
            <Image src={heroImage} alt={title} width={720} height={360} loading='eager' fetchpriority='high' />
          )
        }
        <h1 class='title'>{title}</h1>
        <Tag tags={tags} className='mt-4' />
        <div class='flex items-center gap-4 text-sm text-skin-neutral-3 mt-2'>
          {wordCount > 0 && <span>共 {wordCount} 字</span>}
          {duration && <span>{duration}</span>}
        </div>
        <!-- <Code
          code={`const initMiniProgram = () => {
  let adapter = {} as PlatformAdapterType
  const set = (platformAdapterContainers: InitialAdapterParamType) => {
    if (!getInstanceInfo().platform) throw Error(NotSupportMsg)
}`}
          lang="ts"
          theme="dark-plus"
        /> -->
        {
          updatedDate && (
            <div>
              Last updated on <time>{updatedDate}</time>
            </div>
          )
        }
        <hr />
        <slot />
        <Comments />
      </article>
    </main>
    <Footer />
  </body>
</html>
