---
import BaseHead from '@/components/BaseHead.astro'
import Header from '@/components/Header/Header.astro'
import Footer from '@/components/Footer.astro'
import Comments from '@/components/Comments.astro'
import Tag from '@/components/Tag.astro'
import BlogMeta from '@/components/BlogMeta.astro'
import { getCollection, render, type CollectionEntry } from 'astro:content'
import { getWordCount } from '@/shared/utils'
import { Image } from 'astro:assets'
import 'github-markdown-css'

export async function getStaticPaths() {
	const posts = await getCollection('blogs')
	return posts.map((post: CollectionEntry<'blogs'>) => ({
		params: { slug: post.id },
		props: { post },
	}))
}

type Props = { post: CollectionEntry<'blogs'> }

const { post } = Astro.props as Props
const { Content } = await render(post)
const { title, description, pubDate, updatedDate, heroImage, author, authorHref, tags } = post.data

const rawContent = post.body ?? ''
const wordCount = getWordCount(rawContent)
const readingTime = Math.ceil(wordCount / 400)
---

<html lang='en'>
  <head>
    <BaseHead
      title={title}
      description={description}
      image={heroImage?.src}
      author={author}
      authorHref={authorHref}
      pubDate={pubDate}
      updatedDate={updatedDate}
      type='article'
      tags={tags}
    />
  </head>

  <body class='bg-skin-background'>
    <Header />
    <main class='min-h-screen'>
      {heroImage && (
        <div class='max-w-5xl mx-auto px-6 md:px-12 mt-8 md:mt-12'>
          <div class='w-full flex justify-center'>
            <Image
              src={heroImage}
              alt={title}
              width={1440}
              height={400}
              loading='eager'
              fetchpriority='high'
              class='max-w-full h-auto max-h-96 object-contain rounded-lg'
            />
          </div>
        </div>
      )}
      <article class='max-w-4xl mx-auto px-6 md:px-12 py-12'>
        <h1 class='text-3xl md:text-4xl font-bold text-skin-neutral-1 tracking-tight mb-6'>{title}</h1>
        <BlogMeta
          pubDate={pubDate}
          author={author}
          authorHref={authorHref}
          wordCount={wordCount}
          readingTime={readingTime}
          class='gap-x-8 gap-y-2 mb-6'
        />
        <Tag tags={tags} className='mb-6' />
        <div class='h-px bg-skin-card-border mb-8'></div>
        {updatedDate && (
          <div class='text-skin-neutral-5 font-mono text-xs mb-4'>
            Last updated on <time>{updatedDate}</time>
          </div>
        )}
        <div class='prose prose-slate dark:prose-invert max-w-none'>
          <Content />
        </div>
        <Comments />
      </article>
    </main>
    <Footer />
  </body>
</html>
