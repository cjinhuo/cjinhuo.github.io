---
import BaseHead from '../components/BaseHead.astro'
import Footer from '@/components/Footer.astro'
import Header from '@/components/Header/Header.astro'
import TypeWriter from '@/components/TypeWriter'
import RecentPosts from '@/components/RecentPosts.astro'
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead />
  </head>
  <body class="bg-skin-background">
    <Header />
    <main class="min-h-screen">
      <section class="border-b border-skin-card-border">
        <div class="max-w-5xl mx-auto px-6 md:px-12 py-16 md:py-20 flex flex-col md:flex-row items-center gap-12 md:gap-16">
          <div class="flex-1 space-y-6">
            <div style="min-height: 9rem;">
              <TypeWriter client:only="react" />
            </div>
            <div class="flex items-center gap-3">
              <span class="w-2 h-2 rounded-full bg-skin-status-dot animate-pulse"></span>
              <span class="text-skin-neutral-5 font-mono text-xs">Available for open source collaboration</span>
            </div>
          </div>
          <div class="w-40 h-40 md:w-48 md:h-48 rounded-lg bg-skin-card-bg border border-skin-card-border flex items-center justify-center">
            <span class="text-5xl md:text-6xl font-bold text-skin-primary">S</span>
          </div>
        </div>
      </section>

      <section class="max-w-5xl mx-auto px-6 md:px-12 py-12">
        <div class="flex justify-between items-center mb-8">
          <h2 class="text-2xl font-semibold text-skin-neutral-1">Posts</h2>
          <span class="text-skin-neutral-5 font-mono text-xs">latest articles</span>
        </div>
        <div class="h-px bg-skin-card-border mb-8"></div>
        <article>
          <RecentPosts />
          <a
            class="inline-flex items-center gap-2 text-skin-primary hover:text-skin-primary-hover font-mono text-sm transition-colors"
            href="/blogs"
          >
            View all posts
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14"></path>
              <path d="m12 5 7 7-7 7"></path>
            </svg>
          </a>
        </article>
      </section>
    </main>
    <Footer />
  </body>
</html>
